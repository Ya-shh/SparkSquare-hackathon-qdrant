# üê≥ Docker Environment Configuration for SparkSquare Mixtral-8x22B AI Platform
# Copy this to .env.local and fill in your API keys

# Database (Docker internal)
DATABASE_URL="file:./prisma/dev.db"

# NextAuth.js Configuration
NEXTAUTH_SECRET="your-super-secret-key-here-minimum-32-characters-long-for-production"
NEXTAUTH_URL="http://localhost:3000"

# ü§ñ Mixtral-8x22B Configuration (REQUIRED)
# Get your API key from: https://console.mistral.ai/
MISTRAL_API_KEY="T6gaQQ5pg1Q4z8WcqRnn4WobyvydHDLW"
MISTRAL_MODEL="open-mixtral-8x22b"
MISTRAL_ENDPOINT="https://api.mistral.ai/v1"
USE_MISTRAL_LLM="true"
MISTRAL_MAX_TOKENS="4096"
MISTRAL_TEMPERATURE="0.7"

# Embedding Configuration (Using Mistral)
EMBEDDING_MODEL="mistral-embed"
MULTIMODAL_MODEL="llamaindex/vdr-2b-multi-v1"
USE_MISTRAL_FOR_EMBEDDINGS="true"
PREFER_MISTRAL_OVER_HF="true"

# Optional API Keys (for additional features)
OPENAI_API_KEY=""
HF_API_KEY="your-huggingface-api-key-here"

# Qdrant Configuration (Docker internal)
QDRANT_URL="http://qdrant:6333"
QDRANT_API_KEY=""

# Redis Configuration (Docker internal)
UPSTASH_REDIS_REST_URL="redis://redis:6379"
UPSTASH_REDIS_REST_TOKEN=""

# üöÄ Multimodal AI Features
ENABLE_BINARY_QUANTIZATION="true"
ENABLE_MULTIMODAL_SEARCH="true"
ENABLE_COLLABORATIVE_FILTERING="true"
SEMANTIC_GAP_BRIDGING="true"
ENABLE_VISUAL_DOCUMENT_RETRIEVAL="true"
ENABLE_CROSS_MODAL_SEARCH="true"

# üìÅ File Upload Configuration
MAX_FILE_SIZE="10485760"  # 10MB
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp,image/gif"
ALLOWED_DOCUMENT_TYPES="application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain"

# üñºÔ∏è Image Processing
ENABLE_IMAGE_COMPRESSION="true"
IMAGE_QUALITY="80"
MAX_IMAGE_DIMENSION="1920"

# üìÑ Document Processing
ENABLE_OCR="true"
EXTRACT_TABLES="true"
EXTRACT_IMAGES_FROM_DOCS="true"

# üîç Search Configuration
DEFAULT_SCORE_THRESHOLD="0.7"
MAX_SEARCH_RESULTS="50"
ENABLE_HYBRID_SEARCH="true"
RRF_K_VALUE="60"

# üéØ Recommendation System
ENABLE_CONTENT_BASED_RECOMMENDATIONS="true"
ENABLE_COLLABORATIVE_FILTERING_RECOMMENDATIONS="true"
RECOMMENDATION_DIVERSITY_THRESHOLD="0.3"
RECOMMENDATION_BATCH_SIZE="100"

# ‚ö° Performance Optimization
ENABLE_RESULT_CACHING="true"
CACHE_TTL="300"  # 5 minutes
ENABLE_EMBEDDING_CACHE="true"

# üê≥ Docker-specific settings
NODE_ENV="development"
NEXT_TELEMETRY_DISABLED="1"
