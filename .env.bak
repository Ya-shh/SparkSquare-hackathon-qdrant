# Database
DATABASE_URL="file:./prisma/dev.db"

# NextAuth.js
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# API Keys for Embeddings and LLM
OPENAI_API_KEY=""
HF_API_KEY=""
MISTRAL_API_KEY=""

# Qdrant Configuration
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY=""

# LLM Configuration - Mixtral-8x22B
MISTRAL_MODEL="mistral-7b-instruct-v0.3"
MISTRAL_ENDPOINT="https://api.mistral.ai"
USE_MISTRAL_LLM="true"
MISTRAL_MAX_TOKENS="4096"
MISTRAL_TEMPERATURE="0.7"

# Embedding Model Configuration
EMBEDDING_MODEL="mistral-embed"
MULTIMODAL_MODEL="llamaindex/vdr-2b-multi-v1"

# Advanced Features
ENABLE_BINARY_QUANTIZATION="true"
ENABLE_MULTIMODAL_SEARCH="true"
ENABLE_COLLABORATIVE_FILTERING="true"
PREFER_MISTRAL_OVER_HF="false"
USE_MISTRAL_FOR_EMBEDDINGS="true"

# Rate Limiting (Upstash Redis)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# File Upload Configuration
MAX_FILE_SIZE="10485760"  # 10MB
ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp,image/gif"
ALLOWED_DOCUMENT_TYPES="application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain"

# Multimodal AI Configuration
ENABLE_VISUAL_DOCUMENT_RETRIEVAL="true"
ENABLE_CROSS_MODAL_SEARCH="true"
SEMANTIC_GAP_BRIDGING="true"
BINARY_QUANTIZATION_THRESHOLD="1000"

# Image Processing
ENABLE_IMAGE_COMPRESSION="true"
IMAGE_QUALITY="80"
MAX_IMAGE_DIMENSION="1920"

# Document Processing
ENABLE_OCR="true"
EXTRACT_TABLES="true"
EXTRACT_IMAGES_FROM_DOCS="true"

# Search Configuration
DEFAULT_SCORE_THRESHOLD="0.7"
MAX_SEARCH_RESULTS="50"
ENABLE_HYBRID_SEARCH="true"
RRF_K_VALUE="60"

# Recommendation System
ENABLE_CONTENT_BASED_RECOMMENDATIONS="true"
ENABLE_COLLABORATIVE_FILTERING_RECOMMENDATIONS="true"
RECOMMENDATION_DIVERSITY_THRESHOLD="0.3"
RECOMMENDATION_BATCH_SIZE="100"

# Performance Optimization
ENABLE_RESULT_CACHING="true"
CACHE_TTL="300"  # 5 minutes
ENABLE_EMBEDDING_CACHE="true"